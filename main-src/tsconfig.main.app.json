{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "../dist/app/main",
        "listEmittedFiles": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "./**/*.spec.ts"
    ]
}